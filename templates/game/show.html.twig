{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
<div class="container site-grey-background" style="border-top:5px solid green; margin-top:15px;">
    <h1>Game</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ game.rating }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ game.description }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('game_index') }}">back to list</a>
    <a href="{{ path('game_edit', {'id': game.id}) }}">edit</a>
    {{ include('game/_delete_form.html.twig') }}
</div>
{% endblock %}